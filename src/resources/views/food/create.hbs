<div class="container">
    <div class="row">
        <div class="col-1">
            <div class="breadcrumb">
                <a class="btn btn-success btn-sm" href="/admin/foodType/index" role="button">
                    <i class="fas fa-chevron-left"></i>
                    Trở lại
                </a>
            </div>
        </div>
        <div class="col-10">
            <center>
                <h2 style="color: rgb(0, 0, 0)"><i class="fas fa-hamburger"></i> Nhập thông tin sản phẩm</h2>
            </center>
        </div>
        <div class="col-1"></div>
    </div>
    <hr>
    <div class="row">
        <div class="col-4">
            <div class="col-sm-6 col-lg-4">
                <div class="card">
                    <!--TAG TRÊN-->
                    <div class="pl-3 pr-2 py-1">
                        <div class="">
                            <button type="button" class="btn btn-warning btn-sm border-radius" disabled>Trực
                                tiếp</button>
                        </div>
                    </div>
                    <!--HÌNH ẢNH-->
                    <a href="/food/{{this.slug}}">
                        <img class="card-img-top" id="previewImage" src="/img/empty/YourImageHere.jpg"
                            alt="Image Preview" />
                    </a>
                    <!--TÊN MÓN-->
                    <div class="card-body">
                        <a href="#">
                            <h5 class="card-title" id="product-name">Tên sản phẩm sẽ hiển thị ở đây</h5>
                        </a>
                    </div>
                    <!--GIÁ BÁN / NÚT MUA-->
                    <div class="row next-bar">
                        <div class="col-6">
                            <div class="bd-highlight price_item_new price-big float-right">
                                <div class="float-right">
                                    <span class="" id="price-name">₫.000</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <button style=" width: 100%;"
                                onclick="onClickAdd('{{this._id}}','{{this.name}}','{{this.description}}','{{this.image}}','{{this.price}}')"
                                type="button" class="btn btn-danger btn-lg btn-next-item"> <b>ADD +</b> </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-8">
            <form method="POST" action="/admin/food/store" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" class="form-control" id="name" name="name" placeholder="Tên sản phẩm" />
                </div>
                <div class="form-group">
                    <div class="bootstrap-select">
                        <select class="selectpicker form-select" name="foodtypeid" id="foodtypeid"
                            aria-label="Default select example">
                            <option> -- Chọn loại sản phẩm -- </option>
                            {{#foodtype}}
                            <option value="{{_id}}">
                                {{nameType}}
                            </option>
                            {{/foodtype}}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" id="price" name="price" placeholder="Giá" />
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="description" id="description" rows="3"
                        placeholder="Mô tả"></textarea>
                </div>
                <div class="form-group">
                    <input type="file" class="form-control" id="imageInput" name="image" accept="image/*" />
                </div>
                <div class="form-group">
                    <Center>
                        <button style=" width: 100%;" type="submit" class="btn btn-danger btn-lg">Thêm sản phẩm</button>
                    </Center>
                </div>
        </div>
        </form>
    </div>
</div>
</div>

{{!-- hiển thị dữ liệu trực tiếp khi người dùng nhập thông tin vào form --}}
<script>
    const nameInput = document.getElementById('name');
    const productName = document.getElementById('product-name');
    const defaultText = "Tên sản phẩm sẽ hiển thị ở đây";

    const priceInput = document.getElementById('price');
    const priceName = document.getElementById('price-name');
    const defaultPrice = "₫.000";

    const imageInput = document.getElementById('imageInput');
    const previewImage = document.getElementById('previewImage');

    nameInput.addEventListener('input', function () {
        productName.textContent = nameInput.value.trim() ? nameInput.value : defaultText;
    });

    priceInput.addEventListener('input', function () {
        priceName.textContent = priceInput.value.trim() ? '₫.' + priceInput.value + '.000' : defaultPrice;
    });

    imageInput.addEventListener('change', function (event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                previewImage.src = e.target.result;
                previewImage.style.display = 'block';
            };
            reader.readAsDataURL(file);
        } else {
            previewImage.src = '';
            previewImage.style.display = 'none';
        }
    });
</script>
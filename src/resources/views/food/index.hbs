<div class="content-wrapper">
    <div class="content-header">
        <center>
            <h2 style="color: rgb(0, 0, 0)"><i class="fas fa-hamburger"></i> Quản lý sản phẩm</h2>
        </center>
        <div class="breadcrumb">
            <a class="btn btn-primary btn-sm" href="/admin/food/create" role="button">
                <span class="fas fa-plus-circle"></span> Thêm mới
            </a>
        </div>
    </div>
    <div class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box" id="view">
                    <div class="box-body">
                        <div class="row" style="padding:0px; margin:0px;">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">Stt</th>
                                            <th scope="col">Hình ảnh</th>
                                            <th scope="col">Tên sản phẩm</th>
                                            <th scope="col">Loại sản phẩm</th>
                                            <th scope="col">Giá</th>
                                            <th scope="col">Chức năng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#food}}
                                        <tr>
                                            <th scope="row">{{sum @index 1}}</th>
                                            <td><img src="/upload/{{image}}" alt="{{name}}" style="width: 100px"></td>
                                            <td>{{name}}</td>
                                            <td>{{foodtypeid.nameType}}</td>
                                            <td><span class="float-right">{{price}}<small>.000đ</small></span></td>
                                            <td>
                                                <a href="/admin/food/{{this._id}}/update"
                                                    class="btn btn-warning">Sửa</a>
                                                <a href="" class="btn btn-danger" data-id="{{this._id}}"
                                                    data-bs-toggle="modal" data-bs-target="#delete-food-modal">Xóa</a>
                                            </td>
                                        </tr>
                                        {{/food}}
                                    </tbody>
                                </table>

                                {{!-- Confirm delete course--}}
                                <div class="modal fade" id="delete-food-modal" tabindex="-1"
                                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Xóa món này</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Bạn chắc chắn muốn xóa ?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-danger" id="btn-delete-food">Xóa
                                                    bỏ</button>
                                                <button type="button" class="btn btn-outline-dark"
                                                    data-bs-dismiss="modal">Hủy</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <form name="delete-food-form" method="POST"></form>

                                <script>
                                    document.addEventListener('DOMContentLoaded', function () {
                                        var foodId;
                                        var deleteForm = document.forms['delete-food-form'];
                                        var btnDeleteFood = document.getElementById('btn-delete-food');

                                        $('#delete-food-modal').on('show.bs.modal', function (event) {
                                            var button = $(event.relatedTarget);
                                            foodId = button.data('id');
                                        });

                                        btnDeleteFood.onclick = function () {
                                            deleteForm.action = '/admin/foodlist/' + foodId + '?_method=DELETE';
                                            deleteForm.submit();
                                        }
                                    })
                                </script>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>